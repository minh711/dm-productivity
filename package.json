{
  "name": "dm-productivity",
  "private": true,
  "version": "0.0.0",
  "main": "electron/electron-main.js",
  "scripts": {
    "start:electron": "concurrently \"vite\" \"wait-on http://localhost:7329 && electron .\"",
    "build:electron": "electron-builder",
    "build": "tsc -b && vite build",
    "dev": "vite",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.dmdev.dmproductivity",
    "productName": "DM Productivity",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "sign": false,
      "signAndEditExecutable": false
    },
    "extraResources": [
      {
        "from": "node_modules/adm-zip",
        "to": "node_modules/adm-zip"
      }
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "adm-zip": "^0.5.16",
    "antd": "^5.23.4",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "dm-productivity": "file:",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.1",
    "framer-motion": "^12.4.10",
    "html2canvas": "^1.4.1",
    "i18next": "^24.2.2",
    "react": "^18.3.1",
    "react-big-calendar": "^1.17.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.1.5",
    "recharts": "^2.15.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.18",
    "@types/react-big-calendar": "^1.16.1",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.2"
  }
}
